rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users - each authenticated user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Colección de productos - lectura pública, escritura solo admin
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Paquetes - lectura pública, escritura solo admin
    match /packages/{packageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Configuración (incluye workflowDefaults) - lectura pública, escritura solo admin
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Configuración pública (featureFlags)
    match /config/featureFlags {
      allow read: if true;
      allow write: if false;
    }

    // Contratos - solo admin
    match /contracts/{docId} {
      allow read, write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Bloqueo por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
